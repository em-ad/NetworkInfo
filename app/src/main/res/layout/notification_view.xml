<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/textView_rsrq"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:gravity="right"
            android:text="کیفیت سیگنال:"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:id="@+id/textView_operator"
            android:text="اپراتور:"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_technology"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="نوع اتصال:"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/textView_rssi"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:fontFamily="@font/app_font"
            android:text="قدرت سیگنال:"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_connection_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/indicator_off"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_2"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/textView_unknown"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:fontFamily="@font/app_font"
            android:text="کد جهانی اپراتور:"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_level"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="میزان آنتن:"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>